<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="10dp"
        app:cardCornerRadius="@dimen/feed_card_cornerradius"
        android:background="@color/colorPrimaryDark"
        app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="#00f9f7f7"
                >
                <ImageView
                    android:id="@+id/feed_img"
                    android:layout_width="65dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/ic_launcher" />
                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/feed_img"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/btn_star_big_off"
                    android:id="@+id/imageButton"
                    android:background="#02ffffff" />
                <TextView
                    android:id="@+id/feed_heading"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:textSize="@dimen/feed_heading_textsize"
                    android:text="Heading"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/feed_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/feed_heading"
                    android:layout_toLeftOf="@+id/feed_img"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/feed_type_textsize"
                    android:text="Type"/>
                <TextView
                    android:text="Description"
                    android:textSize="@dimen/feed_desc_textsize"
                    android:id="@+id/feed_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/feed_heading"
                    android:layout_toLeftOf="@+id/feed_img"/>

            </RelativeLayout>
    
    </android.support.v7.widget.CardView>
</LinearLayout>
